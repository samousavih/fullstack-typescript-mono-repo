{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["DOM"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": false,
      "target": "esnext",
      "baseUrl": "./",
      "paths": {
        "@commonTypes": ["../common"],
        "@components/*":["./src/components/*"]
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }